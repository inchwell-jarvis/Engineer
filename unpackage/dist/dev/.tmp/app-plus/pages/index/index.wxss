.box {
  width: 100%;
  height: 100%;
}
.box .tui {
    margin: auto;
    margin-top: 50px;
}
.box .index {
    width: 100%;
    height: 120px;
    background: #FFFFFF;
    margin-bottom: 20px;
    box-sizing: border-box;
}
.box .index .timg {
      width: 70px;
      height: 70px;
      float: left;
      margin-top: 25px;
      margin-left: 25rpx;
}
.box .index .timg .ttimg {
        width: 100%;
        height: 100%;
        border-radius: 50%;
}
.box .index .geren-right {
      height: 100%;
      float: left;
      width: calc(100% - 120px);
      padding-left: 30px;
      box-sizing: border-box;
      font-size: 15px;
      line-height: 120px;
}
.box .table {
    width: 100%;
    background: #FFFFFF;
}
.box .table .Transitional {
      width: 95%;
      height: 45px;
      background: #FFFFFF;
      border-bottom: 0.5px solid #ccc;
      margin: auto;
      font-size: 13px;
      line-height: 45px;
}
.box .table .Transitional .geren-right {
        float: right;
}
.box button {
    width: 80%;
    margin: 50px;
}

